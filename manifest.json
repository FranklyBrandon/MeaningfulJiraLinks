{
  "manifest_version": 3,
  "name": "Meaningful Jira Links",
  "version": "1.0",
  "description": "Copy Jira tickets with a meaningful hyperlink format.",
  "action": {
    "default_title": "Meanignful Jira Links"
  },
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/*"],
      "js": ["content.js"]
    }
  ]
}